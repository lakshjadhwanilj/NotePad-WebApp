<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<div class="container">
    <div class="row">
        <div class="col s12 m9">
            <div class="card story">
                <div class="card-content">
                    <span class="card-title"><strong><%= story.title %></strong>
                        <small><%- editIcon(story.user, user, story._id, false) %></small>
                    </span>
                    <p><%= formatDate(story.createdAt, 'MMMM Do YYYY, h:mm:ss a') %></p>
                    <br>
                    <%= stripTags(story.body) %>
                </div>
            </div>
        </div>
        <div class="col s12 m3 center-align">
            <div class="card">
                <div class="card-image">
                    <img src="<%= story.user.image %>" alt="" class="circle responsive-img img-small">
                </div>
                <div class="card-content">
                    <%= story.user.displayName %>
                </div>
                <div class="card-action">
                    <a href="/stories/user/<%= story.user._id %>">More From <%= story.user.firstName %></a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/add_btn') %>
<%- include('../partials/footer') %>